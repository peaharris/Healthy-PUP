@model DailyRoutine

<div class="col-lg-6">
    <h3 style="color:ghostwhite" class="badge-pill bg-primary">Delete Daily Routine</h3>
</div>

<div class="container pl-sm-5">
    <form>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DogId" />

        <table>
            <tr>
                <th> Date: </th>
                <td> <input asp-for="Date" class="form-control mr-sm-2" type="date" /></td>
            </tr>
            <tr>
                <th> Food: </th>
                <td> <input asp-for="Food" class="form-control mr-sm-2" placeholder="Food" aria-label="Food" /></td>
            </tr>
            <tr>
                <th> Poop Count: </th>
                <td> <input asp-for="Poop" class="form-control mr-sm-2" placeholder="Poop" aria-label="Poop" /></td>
            </tr>
            <tr>
                <th> Pee Count: </th>
                <td> <input asp-for="Pee" class="form-control mr-sm-2" placeholder="Pee" aria-label="Pee" /></td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input type="submit"
                           asp-controller="DailyRoutine"
                           asp-action="Delete"
                           formmethod="post"
                           value="Delete &#x1F5D1"
                           class="badge-pill badge-danger"
                           asp-for-id="DailyRoutineId" />
                    <input type="submit"
                           asp-controller="Dog"
                           asp-action="Detail"
                           formmethod="get"
                           value="Cancel"
                           class="badge-pill badge-primary"
                           asp-route-id="@Model.DogId" />
                </td>
            </tr>
        </table>
    </form>
</div>
