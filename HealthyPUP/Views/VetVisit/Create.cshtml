@model VetVisit

<div class="col-lg-6">
    <h3 style="color:ghostwhite" class="badge-pill bg-primary text-center">Add Vet Visit</h3>
</div>

<div class="container pl-sm-5">
    <form asp-controller="VetVisit" asp-action="Create">
        <input type="hidden" asp-for="DogId" />
        <table>
            <tr>
                <th> Date: </th>
                <td> <input asp-for="Date" asp-format="Date" value="@Model.DogId" type="date" class="form-control mr-sm-2" placeholder="Date" aria-label="Date" /></td>
            </tr>
            <tr>
                <th> Vaccine: </th>
                <td> <input asp-for="Vaccine" class="form-control mr-sm-2" placeholder="Vaccine" aria-label="Vaccine" /></td>
            </tr>
            <tr>
                <th> Weight: </th>
                <td> <input asp-for="Weight" class="form-control mr-sm-2" placeholder="Weight" aria-label="Weight" /></td>
            </tr>
            <tr>
                <th> Comments: </th>
                <td> <input asp-for="Comments" class="form-control mr-sm-2" placeholder="Comments" aria-label="Comments" /></td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input type="submit" value="Add Vet Visit" class="badge-pill badge-primary" />
                    <input type="submit"
                           asp-controller="Dog"
                           asp-action="Detail"
                           formmethod="get"
                           value="Cancel"
                           class="badge-pill badge-primary"
                           asp-route-id="@Model.DogId" />
                </td>
            </tr>
        </table>
    </form>
</div>